{
  "name": "whereto",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:bot\" \"npm run dev:miniapp\"",
    "dev:api": "nx serve api",
    "dev:bot": "nx serve bot",
    "dev:miniapp": "nx serve miniapp",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/testing": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "@nx/eslint": "^22.2.3",
    "@nx/eslint-plugin": "^22.2.3",
    "@nx/node": "^22.2.3",
    "@nx/workspace": "^22.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nx": "^22.2.3",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typeorm": "^0.3.28",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/terminus": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
