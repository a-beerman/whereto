{
  "name": "bot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bot/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/bot"],
      "options": {
        "command": "npx tsc -p apps/bot/tsconfig.app.json --outDir dist/apps/bot",
        "cwd": "{workspaceRoot}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx --tsconfig apps/bot/tsconfig.app.json --watch apps/bot/src/main.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/bot/jest.config.ts"
      }
    }
  },
  "tags": ["type:app", "scope:bot"]
}
