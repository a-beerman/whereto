# API runtime
NODE_ENV=development
API_PORT=3000
API_PREFIX=api
API_VERSION=v1
CORS_ORIGIN=http://localhost:4200

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=change-me
DB_NAME=whereto_catalog
# Alternative names supported by code: DB_USERNAME, DB_DATABASE
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Schema management
# For local iterative development you can keep this true.
# If you prefer migrations-only workflow, set to false and run migrations.
DB_SYNCHRONIZE=true

# Integrations
# Optional: used by Google Places ingestion and photo service. If empty, related features are disabled with a warning.
GOOGLE_PLACES_API_KEY=
